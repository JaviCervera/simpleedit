<language case_sensitive="true">
	<keywords>if else switch case default for to step do while break Bool Int Float String func return const type true false</keywords>
	<multilinecomments begin="/\*" end="\*/" />
	<rule regex="\b[0-9]+(\.[0-9]+)?" id="numbers" />
	<rule regex="#[^\n]*" id="preprocessor" />
	<rule regex="&quot.*&quot" id="strings" />
	<rule regex="//[^\n]*" id="comments" />
	<rule regex="//\$[^\n]*" id="preprocessor" />
	<commands>
		<compile>
			./bin/leafc %F
		</compile>
	</commands>
</language>
